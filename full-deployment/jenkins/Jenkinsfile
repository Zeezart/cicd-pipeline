pipeline {
    agent any

    tools{
        nodejs 'NODE21'
    }

    stages {
        stage('Clone Code') {
            steps {
                git url: 'https://github.com/Zeezart/my-deen-and-i.git', branch: 'main'

            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Package Artifact') {
            steps {
                sh 'zip -r build.zip dist/'
            }
        }

        stage('Copy Artifact to Server') {
            steps {
                // sh 'scp -i ~/.ssh/vibez-key build.zip ubuntu@3.91.99.212:/home/ubuntu/'
                sh 'scp -i /var/lib/jenkins/.ssh/vibez-key -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null build.zip ubuntu@3.91.99.212:/home/ubuntu/'


            }
        }

        stage('Clone pipeline Repo') {
          steps {
            sh 'git clone https://github.com/Zeezart/cicd-pipeline.git'
          }
        }

        stage('Trigger Ansible Deployment') {
            steps {
                dir("${env.WORKSPACE}") {
                  sh 'ansible-playbook -i ansible/inventory.ini ansible/playbook.yaml'
                }
            }
        }
    }
}
